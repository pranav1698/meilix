+++ meilix-default-theme-1.0/Makefile
@@ -0,0 +1,18 @@
+#!/usr/bin/make -f
+
+#SUBDIRS :=
+ 
+all: install
+
+install:
+	mkdir -pv $(DESTDIR)
+	cp -a etc usr $(DESTDIR)/.
+	# po generation
+	for i in $(SUBDIRS); do \
+		make -C $(DESTDIR)/$$i; \
+		rm -rf $(DESTDIR)/$$i; \
+	done
+	# remove some remaining files
+	find $(DESTDIR) -type f -iname "*.in" | xargs rm -f
+
+# vim:ts=4
\ No newline at end of file
